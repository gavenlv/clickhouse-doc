<yandex>
    <!-- Skip user check for Docker/K8s environment -->
    <skip_user_check>true</skip_user_check>

    <logger>
        <level>warning</level>
        <console>true</console>
    </logger>

    <listen_host>0.0.0.0</listen_host>
    <http_port>8123</http_port>
    <tcp_port>9000</tcp_port>
    <interserver_http_port>9009</interserver_http_port>
    <interserver_http_host>0.0.0.0</interserver_http_host>

    <enable_play_ui>1</enable_play_ui>
    <http_server_default_headers>
        <Enable-CORS>true</Enable-CORS>
    </http_server_default_headers>

    <!-- Cluster configuration -->
    <remote_servers>
        <treasurycluster>
            <shard>
                <internal_replication>true</internal_replication>
                <replica>
                    <host>clickhouse1</host>
                    <port>9000</port>
                </replica>
                <replica>
                    <host>clickhouse2</host>
                    <port>9000</port>
                </replica>
            </shard>
        </treasurycluster>
    </remote_servers>

    <!-- ZooKeeper replacement using ClickHouse Keeper -->
    <zookeeper>
        <node>
            <host>keeper1</host>
            <port>9181</port>
        </node>
        <node>
            <host>keeper2</host>
            <port>9181</port>
        </node>
        <node>
            <host>keeper3</host>
            <port>9181</port>
        </node>
    </zookeeper>

    <!-- Default replication path configuration -->
    <default_replica_path>/clickhouse/tables/{shard}/{table}</default_replica_path>
    <default_replica_name>{replica}</default_replica_name>

    <!-- Macros for replication (different for each replica) -->
    <macros>
        <!-- Cluster identification -->
        <cluster>treasurycluster</cluster>
        <layer>1</layer>

        <!-- Shard and replica -->
        <shard>1</shard>
        <replica>2</replica>

        <!-- Table path prefix for ZooKeeper -->
        <table_prefix>tables</table_prefix>
    </macros>

</yandex>
